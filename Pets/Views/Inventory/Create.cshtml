@model Pets.ViewModels.Inventory.InventoryCreateViewModel

<h1>Creating Object</h1>

<form asp-controller="inventory" asp-action="create" enctype="multipart/form-data" method="post" class="mt-3">
	<div asp-validation-summary="All" class="text-danger"></div>>
	<div class="form-group row">
		<label asp-for="Name" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Name" class="form-control" placeholder="Name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Type" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<select asp-for="Type" class="custom-select mr-sm-2"
					asp-items="Html.GetEnumSelectList<ItemType>()">
				<option value="">Please Select</option>
			</select>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<label asp-for="Value" class="col-sm-2 col-form-label"></label>
		<div class="col-sm-10">
			<input asp-for="Value" class="form-control" placeholder="Value" />
			<span asp-validation-for="Value" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10">
			<button type="submit" class="btn btn-primary">Create</button>
			<a asp-action="index" asp-controller="inventory" class="btn btn-primary">Cancel</a>
		</div>
	</div>
</form>